@model OnlineShop.WebClient.Models.CustomerViewModel

@{
    ViewBag.Title = "Detail";
}

<h3>Details</h3>
<form class="form-horizontal">
    <div class="form-group">
        <label for="customer-deteails-firstName" class="col-sm-2 control-label">First name</label>
        <div class="col-sm-10">
            <p class="form-control-static">@Model.FirstName</p>
        </div>
    </div>
    <div class="form-group">
        <label for="customer-deteails-lastName" class="col-sm-2 control-label">Last name</label>
        <div class="col-sm-10">
            <p class="form-control-static">@Model.LastName</p>
        </div>
    </div>
    <div class="form-group">
        <label for="customer-deteails-lastName" class="col-sm-2 control-label">Phone</label>
        <div class="col-sm-10">
            <p class="form-control-static">@Model.Phone</p>
        </div>
    </div>
    <div class="form-group">
        <label for="customer-deteails-lastName" class="col-sm-2 control-label">Second phone</label>
        <div class="col-sm-10">
            <p class="form-control-static">@Model.SecondPhone</p>
        </div>
    </div>
    <div class="form-group">
        <label for="customer-deteails-lastName" class="col-sm-2 control-label">Address</label>
        <div class="col-sm-10">
            <p class="form-control-static">@Model.Address</p>
        </div>
    </div>
</form>
<div>
    @Html.ActionLink("Back to List", "All")
</div>

